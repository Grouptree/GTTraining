@{  
    string searchPageURL = GT.Training.BL.SearchBL.GetSearchPageURL();  
    
    if (!string.IsNullOrWhiteSpace(searchPageURL))
    {             
        <form role="form" action="@searchPageURL" method="get">
            <div class="input-group">    
                <input type="text" name="searchText" id="main-searchbox" class="form-control" />
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-default" />
                 </span>
            </div>
        </form>
    
        <script>
            jQuery(document).ready(function () {
                jQuery("#main-searchbox").val(gt.pageContext.qs('searchText'));
            });
        </script>
    
    }    
}


